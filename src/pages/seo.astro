---
import ProductPage from '../layouts/ProductPage.astro';

const features = [
  {
    icon: "M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z",
    title: "AI Site Analysis",
    description: "Comprehensive analysis of your site structure, performance, and SEO health with actionable recommendations."
  },
  {
    icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
    title: "Keyword Strategy",
    description: "AI-powered keyword research and planning. Discover trends, analyze competition, and build your SEO roadmap."
  },
  {
    icon: "M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1",
    title: "Backlink Mapping",
    description: "Visualize your backlink strategy with interactive maps. Auto-plan link building and track your progress."
  },
  {
    icon: "M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z",
    title: "Media Intelligence",
    description: "AI analyzes your images and videos - auto-tagging, categorization, alt text suggestions, and SEO optimization."
  },
  {
    icon: "M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z",
    title: "AI Content Writer",
    description: "Generate SEO-optimized content with AI. Auto-insert backlinks, keywords, and matching media assets."
  },
  {
    icon: "M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z",
    title: "Platform Integration",
    description: "Connect to WordPress, social media platforms, and more. Schedule posts and sync content across channels."
  }
];

const colorScheme = {
  primary: '#10B981',
  accent: '#34D399',
  primaryRgb: '16, 185, 129'
};
---

<ProductPage
  productId="seo"
  productName="Centrify SEO"
  tagline="AI-Powered Content & SEO"
  description="Analyze your site, strategize keywords, auto-generate optimized content, and manage your media assets with AI - all in one powerful SEO platform."
  heroDescription="Harness the power of AI to analyze your site, plan keyword strategies, auto-generate optimized content, and manage media assets. Your complete SEO command center."
  features={features}
  colorScheme={colorScheme}
  appUrl="https://content.centrify.io"
  ctaTitle="Ready to dominate search rankings?"
  ctaDescription="Join thousands of marketers using Centrify SEO to grow organic traffic."
>
  <Fragment slot="hero-visual">
    <div class="seo-dashboard">
      <div class="seo-header">
        <div class="seo-title">Keyword Rankings</div>
        <div class="seo-badge up">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 17l9.2-9.2M17 17V7H7"/>
          </svg>
          +23 positions
        </div>
      </div>
      <div class="keyword-list">
        <div class="keyword-item">
          <span class="keyword-text">financial management software</span>
          <span class="keyword-rank">#3</span>
        </div>
        <div class="keyword-item">
          <span class="keyword-text">business cash flow tools</span>
          <span class="keyword-rank">#5</span>
        </div>
        <div class="keyword-item">
          <span class="keyword-text">multi-entity accounting</span>
          <span class="keyword-rank">#2</span>
        </div>
      </div>
      <div class="seo-stats">
        <div class="seo-stat">
          <div class="stat-number">12.4K</div>
          <div class="stat-label">Monthly Traffic</div>
        </div>
        <div class="seo-stat">
          <div class="stat-number">89</div>
          <div class="stat-label">Domain Authority</div>
        </div>
      </div>
    </div>
  </Fragment>
</ProductPage>

<style>
  /* SEO Dashboard Visual */
  .seo-dashboard {
    width: 100%;
    max-width: 420px;
    padding: 24px;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 24px;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .seo-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .seo-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--text);
  }

  .seo-badge {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 4px 10px;
    border-radius: 100px;
    font-size: 12px;
    font-weight: 600;
  }

  .seo-badge.up {
    background: rgba(16, 185, 129, 0.2);
    color: #10B981;
  }

  .keyword-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 20px;
  }

  .keyword-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .keyword-text {
    font-size: 13px;
    color: var(--text-muted);
  }

  .keyword-rank {
    font-size: 14px;
    font-weight: 700;
    color: #10B981;
  }

  .seo-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }

  .seo-stat {
    padding: 16px;
    background: rgba(16, 185, 129, 0.1);
    border-radius: 12px;
    text-align: center;
    border: 1px solid rgba(16, 185, 129, 0.2);
  }

  .stat-number {
    font-size: 24px;
    font-weight: 700;
    color: #10B981;
    margin-bottom: 4px;
  }

  .stat-label {
    font-size: 11px;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
</style>
