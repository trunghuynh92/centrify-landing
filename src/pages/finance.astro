---
import ProductPage from '../layouts/ProductPage.astro';

const features = [
  {
    icon: "M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z",
    title: "Multi-Entity Accounting",
    description: "Manage finances across multiple companies, branches, and entities from one unified dashboard."
  },
  {
    icon: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
    title: "Bank Statement Import",
    description: "Import CSV/Excel statements with smart column detection and automatic reconciliation."
  },
  {
    icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
    title: "Cash Flow Reports",
    description: "Real-time insights into your cash flow with beautiful charts and detailed breakdowns."
  },
  {
    icon: "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z",
    title: "Scheduled Payments",
    description: "Never miss a payment with automated scheduling and recurring transaction support."
  },
  {
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
    title: "Checkpoint Reconciliation",
    description: "Verify account balances with smart checkpoint system and automatic adjustments."
  },
  {
    icon: "M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z",
    title: "Mobile Ready",
    description: "Access your finances anywhere with our responsive web app and native mobile experience."
  }
];

const colorScheme = {
  primary: '#0EA5E9',
  accent: '#22D3EE',
  primaryRgb: '14, 165, 233'
};
---

<ProductPage
  productId="finance"
  productName="Centrify Finance"
  tagline="Financial Management Made Simple"
  description="Track cash flow, import bank statements, and manage multiple business entities with Centrify Finance - the modern financial management platform for businesses."
  heroDescription="Track cash flow, import bank statements, and manage multiple business entities - all from one powerful dashboard. Simple enough for startups, robust enough for enterprises."
  features={features}
  colorScheme={colorScheme}
  appUrl="https://app.centrify.io"
  ctaTitle="Ready to take control of your finances?"
  ctaDescription="Join thousands of businesses managing their money smarter with Centrify Finance."
>
  <Fragment slot="hero-visual">
    <div class="dashboard-card">
      <div class="dashboard-header">
        <div>
          <div class="dashboard-label">Total Balance</div>
          <div class="dashboard-amount">$124,563</div>
        </div>
        <div class="dashboard-badge">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 17l9.2-9.2M17 17V7H7"/>
          </svg>
          +12.5%
        </div>
      </div>
      <div class="dashboard-chart"></div>
      <div class="dashboard-stats">
        <div class="stat-card">
          <div class="stat-label">Income</div>
          <div class="stat-value income">+$8,420</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Expenses</div>
          <div class="stat-value expense">-$3,150</div>
        </div>
      </div>
    </div>
  </Fragment>
</ProductPage>

<style>
  /* Dashboard Card Visual */
  .dashboard-card {
    width: 100%;
    max-width: 450px;
    padding: 28px;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 24px;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 24px;
  }

  .dashboard-label {
    font-size: 14px;
    color: var(--text-muted);
    margin-bottom: 4px;
  }

  .dashboard-amount {
    font-size: 42px;
    font-weight: 700;
    background: linear-gradient(135deg, var(--text) 0%, #22D3EE 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .dashboard-badge {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 6px 12px;
    background: rgba(34, 197, 94, 0.2);
    border-radius: 100px;
    color: #22C55E;
    font-size: 14px;
    font-weight: 600;
  }

  .dashboard-chart {
    height: 120px;
    background: linear-gradient(180deg, rgba(14, 165, 233, 0.3) 0%, transparent 100%);
    border-radius: 12px;
    position: relative;
    overflow: hidden;
    margin-bottom: 20px;
  }

  .dashboard-chart::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #0EA5E9, #22D3EE, #0D9488);
  }

  .dashboard-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
  }

  .stat-card {
    padding: 16px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .stat-label {
    font-size: 12px;
    color: var(--text-muted);
    margin-bottom: 4px;
  }

  .stat-value {
    font-size: 20px;
    font-weight: 600;
  }

  .stat-value.income {
    color: #22C55E;
  }

  .stat-value.expense {
    color: #F43F5E;
  }
</style>
