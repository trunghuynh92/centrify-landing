---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';

const products = [
  {
    id: 'finance',
    name: 'Centrify Finance',
    tagline: 'Financial Management Made Simple',
    description: 'Track cash flow, import bank statements, and manage multiple business entities from one powerful dashboard.',
    href: '/finance',
    appUrl: 'https://app.centrify.io',
    color: '#0EA5E9',
    accentColor: '#22D3EE',
    icon: 'M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z',
    features: [
      'Multi-entity accounting',
      'Bank statement import',
      'Cash flow reports',
      'Scheduled payments'
    ]
  },
  {
    id: 'seo',
    name: 'Centrify SEO',
    tagline: 'AI-Powered Content & SEO',
    description: 'Analyze your site, strategize keywords, auto-generate optimized content, and manage your media assets with AI.',
    href: '/seo',
    appUrl: 'https://content.centrify.io',
    color: '#10B981',
    accentColor: '#34D399',
    icon: 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7',
    features: [
      'AI site analysis',
      'Keyword strategy planning',
      'Auto content writing',
      'Platform integrations'
    ]
  },
  {
    id: 'crm',
    name: 'Centrify CRM',
    tagline: 'Smart CRM That Learns',
    description: 'AI chatbot that understands your customers, makes bookings, and improves through every conversation.',
    href: '/crm',
    appUrl: 'https://chat.centrify.io',
    color: '#8B5CF6',
    accentColor: '#EC4899',
    icon: 'M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z',
    features: [
      'AI chat assistant',
      'Customer intelligence',
      'Multi-channel support',
      'Learning & improvement'
    ]
  }
];

const reasons = [
  {
    icon: 'M13 10V3L4 14h7v7l9-11h-7z',
    title: 'AI-Powered',
    description: 'Leverage cutting-edge AI across all tools to automate tasks and gain deeper insights.'
  },
  {
    icon: 'M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z',
    title: 'Unified Platform',
    description: 'One login, one dashboard, seamless data flow between Finance, SEO, and CRM tools.'
  },
  {
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
    title: 'Enterprise Ready',
    description: 'Built for scale with robust security, multi-tenant support, and reliable infrastructure.'
  }
];
---

<BaseLayout
  title="Centrify - One Platform, Three Powerful Solutions"
  description="Manage your finances, optimize your content for SEO, and automate customer relationships with AI-powered tools. All in one unified platform."
>
  <Fragment slot="head">
    <style>
      /* Hero */
      .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding-top: 120px;
        padding-bottom: 80px;
        position: relative;
        overflow: hidden;
      }

      /* Background Blobs */
      .blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.5;
        animation: blobFloat 20s ease-in-out infinite;
      }

      .blob-1 {
        width: 600px;
        height: 600px;
        background: linear-gradient(135deg, #0EA5E9 0%, #22D3EE 100%);
        top: -200px;
        right: -100px;
        animation-delay: 0s;
      }

      .blob-2 {
        width: 500px;
        height: 500px;
        background: linear-gradient(135deg, #10B981 0%, #34D399 100%);
        bottom: -150px;
        left: -100px;
        animation-delay: -5s;
      }

      .blob-3 {
        width: 400px;
        height: 400px;
        background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation-delay: -10s;
        opacity: 0.3;
      }

      @keyframes blobFloat {
        0%, 100% { transform: translate(0, 0) scale(1); }
        25% { transform: translate(30px, -30px) scale(1.05); }
        50% { transform: translate(-20px, 20px) scale(0.95); }
        75% { transform: translate(20px, 30px) scale(1.02); }
      }

      .hero-content {
        text-align: center;
        position: relative;
        z-index: 1;
        max-width: 900px;
        margin: 0 auto;
      }

      .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 20px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 100px;
        font-size: 14px;
        font-weight: 500;
        color: var(--text);
        margin-bottom: 24px;
      }

      .hero-badge span {
        width: 8px;
        height: 8px;
        background: #22C55E;
        border-radius: 50%;
        animation: pulse 2s infinite;
      }

      @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
      }

      .hero-content h1 {
        font-size: 64px;
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 24px;
        letter-spacing: -0.02em;
      }

      .hero-content h1 .gradient {
        background: linear-gradient(135deg, #22D3EE 0%, #0EA5E9 25%, #10B981 50%, #8B5CF6 75%, #EC4899 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .hero-content p {
        font-size: 20px;
        color: var(--text-muted);
        margin-bottom: 40px;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.7;
      }

      .hero-buttons {
        display: flex;
        gap: 16px;
        justify-content: center;
      }

      /* Products Section */
      .products {
        padding: 120px 0;
        position: relative;
      }

      .products-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
      }

      .product-card {
        padding: 32px;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        display: block;
      }

      .product-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--product-color);
        opacity: 0;
        transition: opacity 0.3s;
      }

      .product-card:hover {
        background: rgba(255, 255, 255, 0.08);
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
      }

      .product-card:hover::before {
        opacity: 1;
      }

      .product-icon {
        width: 64px;
        height: 64px;
        background: var(--product-color);
        background: linear-gradient(135deg, var(--product-color) 0%, var(--product-accent) 100%);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 24px;
        opacity: 0.9;
      }

      .product-icon svg {
        width: 32px;
        height: 32px;
        stroke: white;
      }

      .product-card h3 {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 8px;
      }

      .product-tagline {
        font-size: 15px;
        color: var(--product-color);
        font-weight: 600;
        margin-bottom: 12px;
      }

      .product-card > p {
        font-size: 15px;
        color: var(--text-muted);
        line-height: 1.7;
        margin-bottom: 24px;
      }

      .product-features {
        list-style: none;
        margin-bottom: 24px;
      }

      .product-features li {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 14px;
        color: var(--text-muted);
        margin-bottom: 10px;
      }

      .product-features li svg {
        width: 16px;
        height: 16px;
        stroke: var(--product-color);
        flex-shrink: 0;
      }

      .product-cta {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 15px;
        font-weight: 600;
        color: var(--product-color);
        transition: gap 0.2s;
      }

      .product-card:hover .product-cta {
        gap: 12px;
      }

      .product-cta svg {
        width: 18px;
        height: 18px;
        stroke: currentColor;
      }

      /* Why Section */
      .why {
        padding: 120px 0;
        position: relative;
      }

      .why-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 32px;
      }

      .why-card {
        text-align: center;
        padding: 40px 32px;
      }

      .why-icon {
        width: 72px;
        height: 72px;
        background: linear-gradient(135deg, rgba(14, 165, 233, 0.2) 0%, rgba(139, 92, 246, 0.2) 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .why-icon svg {
        width: 36px;
        height: 36px;
        stroke: var(--cyan);
      }

      .why-card h3 {
        font-size: 22px;
        font-weight: 600;
        margin-bottom: 12px;
      }

      .why-card p {
        font-size: 15px;
        color: var(--text-muted);
        line-height: 1.7;
      }

      /* CTA Section */
      .cta {
        padding: 120px 0;
        text-align: center;
      }

      .cta-card {
        padding: 80px 60px;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(24px);
        -webkit-backdrop-filter: blur(24px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 32px;
        position: relative;
        overflow: hidden;
      }

      .cta-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
      }

      .cta h2 {
        font-size: 44px;
        font-weight: 700;
        margin-bottom: 16px;
        letter-spacing: -0.01em;
      }

      .cta p {
        font-size: 18px;
        color: var(--text-muted);
        margin-bottom: 36px;
      }

      /* Responsive */
      @media (max-width: 968px) {
        .hero-content h1 {
          font-size: 48px;
        }

        .products-grid,
        .why-grid {
          grid-template-columns: 1fr;
          max-width: 500px;
          margin: 0 auto;
        }

        .blob {
          opacity: 0.3;
        }
      }

      @media (max-width: 640px) {
        .hero-content h1 {
          font-size: 36px;
        }

        .hero-content p {
          font-size: 16px;
        }

        .hero-buttons {
          flex-direction: column;
          align-items: center;
        }

        .section-header h2,
        .cta h2 {
          font-size: 32px;
        }

        .cta-card {
          padding: 48px 24px;
        }
      }
    </style>
  </Fragment>

  <Fragment slot="background">
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>
    <div class="blob blob-3"></div>
  </Fragment>

  <Navigation slot="header" activePage="home" ctaText="Get Started" />

  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <div class="hero-badge">
          <span></span>
          Now with AI-powered tools
        </div>
        <h1>One Platform,<br><span class="gradient">Three Powerful Solutions</span></h1>
        <p>Manage your finances, optimize your content for SEO, and automate customer relationships. All powered by AI, all in one unified platform.</p>
        <div class="hero-buttons">
          <a href="#products" class="btn btn-primary">
            Explore Products
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
            </svg>
          </a>
          <a href="/blog" class="btn btn-glass">Read Our Blog</a>
        </div>
      </div>
    </div>
  </section>

  <section class="products" id="products">
    <div class="container">
      <div class="section-header">
        <span class="section-tag">Products</span>
        <h2>Choose the tools you need</h2>
        <p>Each product is powerful on its own, and even better together. Start with what you need, add more as you grow.</p>
      </div>
      <div class="products-grid">
        {products.map(product => (
          <a
            href={product.href}
            class="product-card"
            style={`--product-color: ${product.color}; --product-accent: ${product.accentColor}`}
          >
            <div class="product-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d={product.icon} />
              </svg>
            </div>
            <h3>{product.name}</h3>
            <p class="product-tagline">{product.tagline}</p>
            <p>{product.description}</p>
            <ul class="product-features">
              {product.features.map(feature => (
                <li>
                  <svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            <span class="product-cta">
              Learn more
              <svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="why">
    <div class="container">
      <div class="section-header">
        <span class="section-tag">Why Centrify</span>
        <h2>Built for modern businesses</h2>
        <p>Whether you're a startup or enterprise, Centrify scales with your needs.</p>
      </div>
      <div class="why-grid">
        {reasons.map(reason => (
          <div class="why-card">
            <div class="why-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d={reason.icon} />
              </svg>
            </div>
            <h3>{reason.title}</h3>
            <p>{reason.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="cta">
    <div class="container">
      <div class="cta-card">
        <h2>Ready to transform your business?</h2>
        <p>Join thousands of businesses using Centrify to work smarter.</p>
        <a href="https://app.centrify.io" class="btn btn-primary">
          Get Started Free
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
